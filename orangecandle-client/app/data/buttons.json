{
    "Administrator": [
        {
            "xtype": "button",
            "text": "Lessons",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "Lecture",
                "extraStore": "Department"
            },
            "form": {
                "xtype": "addlesson"
            }
        },
        {
            "xtype": "button",
            "text": "Classrooms",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "Room",
                "extraStore": "Building"
            },
            "form": {
                "xtype": "addclassroom"
            }
        },
        {
            "xtype": "button",
            "text": "Constraints",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "Constraint",
                "extraStore" :["xUser","Lecture","Room"]
            },
            "form": {
                "xtype": "addconstraints"
            }
        },
        {
            "xtype": "button",
            "text": "Schools",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "School"
            },
            "form": {
                "xtype": "addschool"
            }
        },
        {
            "xtype": "button",
            "text": "Users",
            "ref": {
                "xtype": "list",
                "itemTpl": "{username}",
                "store": "xUser",
                "alias": "User",
                "extraStore": "Group"
            },
            "form": {
                "xtype": "addaccount"
            }
        },
        {
            "xtype": "button",
            "text": "Groups",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "Group",
                "extraStore": "Role"
            },
            "form": {
                "xtype": "addgroups"
            }
        },
        {
            "xtype": "button",
            "text": "Roles",
            "ref": {
                "xtype": "list",
                "indelible": true,
                "itemTpl": "{name}",
                "store": "Role"
            }
        },{
            "xtype": "button",
            "text": "Assign Lectures",
            "ref": {
                "xtype": "list",
                "itemTpl": "{username}",
                "store": "Teacher",
                "extraStore": "Lecture"
            },
            "form": {
                "xtype": "assignlecture"
            }
        },{
            "xtype": "button",
            "text": "Faculties",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "Faculty",
                "extraStore": "School"
            },
            "form": {
                "xtype": "facultyform"
            }
        },{
            "xtype": "button",
            "text": "Departments",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "Department",
                "extraStore": "Faculty"
            },
            "form": {
                "xtype": "departmentform"
            }
        },{
            "xtype": "button",
            "text": "Buildings",
            "ref": {
                "xtype": "list",
                "itemTpl": "{schoolname} - {name}",
                "store": "Building",
                "extraStore": "School"
            },
            "form": {
                "xtype": "buildingform"
            }
        }
    ],
    "Advisor": [],
    "Teacher": [],
    "Student": [
        {
            "xtype": "button",
            "text": "My Lessons",
            "ref": {
                "xtype": "list",
                "itemTpl": "{name}",
                "store": "UserLecture",
                "extraStore": "Lecture",
                "alias": "Lecture",
                "storeParams": {
                    "username": "OrangeCandle.util.Auth.username"
                }
            },
            "form": {
                "xtype": "userlecture",
                "editable": false
            }
        },{
            "xtype": "button",
            "text": "View Schedule",
            "action":"showSchedule"
        }
    ],
    "All": [
		{
				"xtype" : "button",
				"text" : "ChangePassword",
				"id" : "changePass"
		}    
    ]
}
